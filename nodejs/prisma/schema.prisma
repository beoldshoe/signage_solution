// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  user_id String @id @default(uuid())
  user_name String @db.VarChar(255)
  phoneNumber String @db.Char(255)
}

model Menu{
  menu_id String @id @default(uuid())
  menu_name String @db.VarChar(255)
  menu_description String @db.VarChar(255)
  price Int
  file_path String? @db.VarChar(2058)
  is_soldout Boolean
  category_id Int 
}

model Category{
  category_id String @id @default(uuid())
  category_name String
}

model Allergy{
  allergy_id String @id @default(uuid())
  allergy_name String @db.VarChar(255)
}




